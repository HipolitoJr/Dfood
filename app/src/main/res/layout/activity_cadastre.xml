<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastreActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/icon_dfood"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Realize seu Cadastro:"
            android:gravity="start|center"
            android:textSize="26sp"
            android:fontFamily="casual"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_person_grey_500_36dp"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:inputType="text"
                android:hint="Nome Completo:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_email_grey_500_36dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <EditText
                android:inputType="textEmailAddress"
                android:hint="Endereço de email:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout>

        <!-- LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_map_grey_500_36dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <EditText
                android:inputType="text"
                android:hint="Endereço residencial:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_phone_grey_500_36dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <EditText
                android:inputType="phone"
                android:hint="Telefone:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_lock_outline_grey_500_36dp" />

            <EditText
                android:inputType="textPassword"
                android:hint="Senha pessoal:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_lock_grey_500_36dp"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:inputType="textPassword"
                android:hint="Confirmação de senha:"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_confima_cadastro"
                android:text="Confirmar"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/layout_button_confirm"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>